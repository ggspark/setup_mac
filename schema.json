{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Accounts",
  "description": "An account type",
  "definitions": {
    "online": {
      "type": "object",
      "properties": {
        "username": {
          "type": ["number", "string"]
        },
        "pass": {
          "type": "string"
        },
        "pin": {
          "type": "number"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "createdOn": {
          "type": "string",
          "format": "date"
        },
        "mobile": {
          "type": "number",
          "minLength": 11,
          "maxLength": 13
        },
        "bank": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "mailingAddress": {
          "type": "string"
        },
        "link": {
          "type": "string",
          "format": "uri"
        },
        "authenticator": {
          "type": "string"
        }
      },
      "required": ["username", "pass"]
    },
    "card": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "provider": {
          "type": "string",
          "enum": ["MasterCard", "Visa", "RuPay", "Mastero"]
        },
        "cardNumber": {
          "type": "number",
          "minLength": 16,
          "maxLength": 16
        },
        "validFrom": {
          "type": "string",
          "minLength": 5,
          "maxLength": 5
        },
        "validThru": {
          "type": "string",
          "minLength": 5,
          "maxLength": 5
        },
        "CVV": {
          "type": "number",
          "minLength": 3,
          "maxLength": 3
        },
        "limit": {
          "type": "string"
        },
        "withdrawlimit": {
          "type": "string"
        },
        "checkedAt": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["provider", "cardNumber", "validThru", "CVV"]
    },
    "bank": {
      "type": "object",
      "properties": {
        "holderName": {
          "type": "string"
        },
        "accountNumber": {
          "type": ["number", "string"]
        },
        "ifscCode": {
          "type": "string",
          "pattern": "^[A-Z]{4}0[A-Z0-9]{6}$",
          "minLength": 11,
          "maxLength": 11
        },
        "swiftCode": {
          "type": "string",
          "pattern": "^[A-Z]{6}[A-Z0-9]{2}([A-Z0-9]{3})?$",
          "minLength": 8,
          "maxLength": 11
        },
        "branch": {
          "type": "string"
        },
        "bankCode": {
          "type": ["number", "string"]
        },
        "branchCode": {
          "type": ["number", "string"]
        },
        "customerId": {
          "type": "number"
        },
        "address": {
          "type": "string"
        },
        "mailingAddress": {
          "type": "string"
        },
        "mobile": {
          "type": "number",
          "minLength": 11,
          "maxLength": 13
        },
        "nominee": {
          "type": "string"
        },
        "aadhaar": {
          "type": "number",
          "minLength": 12,
          "maxLength": 12
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "createdOn": {
          "type": "string",
          "format": "date"
        },
        "status": {
          "type": "string",
          "enum": ["Open", "Closed", "Dormant"]
        },
        "cheque": {
          "type": "string",
          "enum": ["Signed", "Unsigned", "Cancelled" ,"NA"]
        },
        "card": {
          "$ref": "#/definitions/card"
        },
        "internetBanking": {
          "$ref": "#/definitions/online"
        }
      },
      "additionalProperties": false,
      "required": ["holderName", "accountNumber", "nominee"]
    },
    "cryptoAssets": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "address": {
          "type": ["number", "string"]
        },
        "privateKey": {
          "type": ["number", "string"]
        }
      },
      "additionalProperties": false,
      "required": ["name", "address", "privateKey"]
    },
    "crypto": {
      "type": "object",
      "properties": {
        "version": {
          "type": ["number", "string"]
        },
        "pass": {
          "type": "string"
        },
        "seed": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "createdOn": {
          "type": "string",
          "format": "date"
        },
        "assets": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/cryptoAssets"
          }
        }
      },
      "additionalProperties": false
    },
    "investment": {
      "type": "object",
      "properties": {
        "bankAccount": {
          "type": ["number", "string"]
        },
        "depositAccount": {
          "type": ["number", "string"]
        },
        "interestRate": {
          "type": ["number", "string"]
        },
        "amount": {
          "type": ["number", "string"]
        },
        "maturityAmount": {
          "type": ["number", "string"]
        },
        "payout": {
          "type": "string",
          "enum": ["Monthly", "Quarterly", "Yearly", "LumpSum"]
        },
        "creationDate": {
          "type": "string",
          "format": "date"
        },
        "maturityDate": {
          "type": "string",
          "format": "date"
        },
        "allotmentDate": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false,
      "required": [
        "bankAccount",
        "depositAccount",
        "interestRate",
        "amount",
        "maturityAmount",
        "payout",
        "creationDate",
        "maturityDate"
      ]
    },
    "insurance": {
      "type": "object",
      "properties": {
        "company": {
          "type": "string"
        },
        "policyNumber": {
          "type": ["number", "string"]
        },
        "customerId": {
          "type": ["number", "string"]
        },
        "holderName": {
          "type": "string"
        },
        "agentName": {
          "type": "string"
        },
        "vehicle": {
          "type": "string"
        },
        "amount": {
          "type": ["number", "string"]
        },
        "creationDate": {
          "type": "string",
          "format": "date"
        },
        "maturityDate": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false,
      "required": ["company", "policyNumber", "holderName"]
    },
    "property": {
      "type": "object",
      "properties": {
        "owner": {
          "type": "string"
        },
        "address": {
          "type": "string"
        },
        "area": {
          "type": ["number", "string"]
        },
        "location": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "value": {
          "type": ["number", "string"]
        },
        "registry": {
          "type": "string"
        },
        "purchaseDate": {
          "type": "string",
          "format": "date"
        }
      },
      "additionalProperties": false,
      "required": [
        "owner",
        "address",
        "area",
        "location",
        "status",
        "value",
        "registry"
      ]
    },
    "disk": {
      "type": "object",
      "properties": {
        "size": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "format": {
          "type": "string"
        },
        "encryption": {
          "type": "string"
        },
        "pass": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": ["size", "location", "format", "encryption", "pass"]
    }
  },
  "type": "object",
  "properties": {
    "Bank": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "propertyNames": {
          "pattern": "^[A-Z][0-9A-Za-z ]*$"
        },
        "patternProperties": {
          "": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "$ref": "#/definitions/bank"
            }
          }
        }
      }
    },
    "Online": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "propertyNames": {
          "pattern": "^[A-Z][0-9A-Za-z ]*$"
        },
        "patternProperties": {
          "": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "$ref": "#/definitions/online"
            }
          }
        }
      }
    },
    "Crypto": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "propertyNames": {
          "pattern": "^[A-Z][0-9A-Za-z ]*$"
        },
        "patternProperties": {
          "": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "$ref": "#/definitions/crypto"
            }
          }
        }
      }
    },
    "Investment": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "propertyNames": {
          "pattern": "^[A-Z][0-9A-Za-z ]*$"
        },
        "patternProperties": {
          "": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "$ref": "#/definitions/investment"
            }
          }
        }
      }
    },
    "Insurance": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "propertyNames": {
          "pattern": "^[A-Z][0-9A-Za-z ]*$"
        },
        "patternProperties": {
          "": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "$ref": "#/definitions/insurance"
            }
          }
        }
      }
    },
    "Property": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "propertyNames": {
          "pattern": "^[A-Z][0-9A-Za-z ]*$"
        },
        "patternProperties": {
          "": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "$ref": "#/definitions/property"
            }
          }
        }
      }
    },
    "Disk": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "propertyNames": {
          "pattern": "^[A-Z][0-9A-Za-z ]*$"
        },
        "patternProperties": {
          "": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "$ref": "#/definitions/disk"
            }
          }
        }
      }
    }
  }
}
