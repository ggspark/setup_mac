{
  // Text Editor
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.dragAndDrop": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.scrollBeyondLastLine": false,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.suggestSelection": "first",
  "editor.rulers": [80],
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.minimap.maxColumn": 80,
  "files.autoSave": "afterDelay",
  "files.autoGuessEncoding": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // Workbench
  "workbench.sideBar.location": "left",
  "workbench.enableExperiments": false,
  "workbench.panel.opensMaximized": "never",
  "workbench.activityBar.iconClickBehavior": "focus",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 16,
  "workbench.view.alwaysShowHeaderActions": true,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.openPositioning": "last",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizing": "shrink",
  "workbench.colorCustomizations": {
     "statusBar.background" : "#303030",
     "statusBar.noFolderBackground" : "#222222"
  },
  // Window
  "window.autoDetectHighContrast": false,
  "window.restoreWindows": "none",
  "window.title": "${rootName}${separator}${activeEditorShort}",
  "window.zoomLevel": 1,
  "window.newWindowDimensions": "offset",
  "window.openFilesInNewWindow": "on",
  "window.openFoldersInNewWindow": "on",
  // Features
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 10,
  "search.showLineNumbers": true,
  "debug.internalConsoleOptions": "openOnSessionStart",
  "debug.openDebug": "openOnSessionStart",
  "debug.console.closeOnEnd": true,
  "debug.openExplorerOnEnd": true,
  "debug.inlineValues": true,
  "debug.console.fontSize": 11,
  "launch": {
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Chrome",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/src",
        "sourceMapPathOverrides": {
          "webpack:///src/*": "${webRoot}/*"
        }
      }
    ],
    "compounds": []
  },
  "scm.alwaysShowRepositories": true,
  "scm.defaultViewMode": "tree",
  "terminal.integrated.shell.osx": "/bin/bash",
  "terminal.integrated.fontSize": 11,
  // Application
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  // ESLint
  // Prettier
  "prettier.enable": true, //Default
  "prettier.printWidth": 80, //Default
  "prettier.tabWidth": 2, //Default
  "prettier.useTabs": false, //Default
  "prettier.semi": true, //Default
  "prettier.singleQuote": true, //false
  "prettier.quoteProps": "consistent", //as-needed
  "prettier.jsxSingleQuote": true, //false
  "prettier.trailingComma": "es5", //Default
  "prettier.bracketSpacing": true, //Default
  "prettier.jsxBracketSameLine": false, //Default
  "prettier.arrowParens": "always", //Default
  "prettier.endOfLine": "lf", //Default
  // VS IntelliCode
  // GitLens
  "gitlens.hovers.currentLine.over": "annotation",
  "gitlens.views.repositories.location": "scm",
  "gitlens.views.lineHistory.location": "scm",
  "gitlens.views.compare.location": "scm",
  "gitlens.views.search.location": "scm",
  "gitlens.views.fileHistory.location": "scm",
  // Debugger for Chrome
  // Material Icon Theme
  // YAML
  "yaml.schemas": {
    "/Users/gaurav/setup_mac/schema.json": ["Accounts/*.yaml"]
  },
  // EditorConfig
  // Dart
  "[dart]": {
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": false
  },
  "dart.debugExternalLibraries": false,
  "dart.debugSdkLibraries": false,
  "dart.allowAnalytics": false,
  "dart.devToolsBrowser": "default",
  // Flutter
  // ES7 React/Redux/GraphQL/React-Native snippets
  // React Native Tools
  // Bracket Pair Colorizer 2
  "bracket-pair-colorizer-2.colors": [
    "Gold",
    "Orchid",
    "LightSkyBlue",
    "Salmon",
    "LawnGreen",
    "DarkOrange",
    "Cornsilk"
  ],

  // Other
  "git.enableSmartCommit": true,
  "git.confirmSync": false
}
